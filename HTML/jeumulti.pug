doctype html
html
  head
    meta(charset='utf-8')
    title Jeux Multijoueur
    style.
      #player1Pierre,#player1Feuille,#player1Ciseaux{
      height: 200px;
      width: 200px;
      background: yellow;
      position:relative;
      margin-top: 3px;
      top:2px;
      background-repeat:no-repeat;
      background-size: cover;
      border-radius: 20px;
      }
      #player1{
      font-size: 23px;
      width: 30%;
      height: 100px;
      position: relative;
      float:left;
      background:rgba(255,255,255,0.7);
      white-space:nowrap;
      }
      #player2{
      font-size: 23px;
      width: 30%;
      height: 100px;
      position: relative;
      float: left;
      background:rgba(255,255,255,0.7);
      white-space:nowrap;
      }
      #score{
      font-size: 40px;
      float: left;
      width: 40%;
      height: 100px;
      float:left;
      text-align: center;
      background:rgba(255,255,255,0.7);
      }
      #player1Pierre{
      background-image:url("/demande/pierre.jpg")  ;
      left: 2px;
      }
      #player1Feuille{
      background-image:url("/demande/feuille.jpg")  ;
      left: 2px;
      }
      #player1Ciseaux{
      background-image:url("/demande/ciseaux.jpg")  ;
      left: 2px;
      }
      #player2Pierre,#player2Feuille,#player2Ciseaux{
      height: 200px;
      width: 200px;
      background: yellow;
      top:-607px;
      position:relative;
      margin-top: 3px;
      background-repeat:no-repeat;
      background-size: cover;
      border-radius: 20px;
      }
      #player2Pierre{
      background-image:url("/demande/pierre.jpg")  ;
      left: 398px;
      }
      #player2Feuille{
      background-image:url("/demande/feuille1.jpg")  ;
      left: 398px;
      }
      #player2Ciseaux{
      background-image:url("/demande/ciseaux1.jpg")  ;
      left: 398px;
      }
      #player1Pierre:hover,#player1Feuille:hover,#player1Ciseaux:hover,#player2Pierre:hover,#player2Feuille:hover,#player2Ciseaux:hover{
      transform: scale(0.9);
      transition: 0.5s;
      }
      #result{
      width: 200px;
      height: 100px;
      background:#5FB404;
      position: absolute;
      top:257px;
      left: 200px;
      border-radius: 50px;
      text-align: center;
      display: none;
      font-size:20px;
        line-height: 4em;
      
      
      }
      header{
      width: 100%;
      height: 100px;
      
      }
      section{
      width: 600px;
      height: 610px;
      background: crimson;
      margin : 0 auto;
      position: relative;
      border-radius: 20px;
      }
      main{
      width: 1000px;
      height: 800px;
      margin : 0 auto;
      background:rgba(255,255,255,0.2);
      border-radius: 20px;
      }
      body{
      background-image:url("/demande/fondjeux1.jpg")  ;
      background-repeat:no-repeat;
      background-size: cover;
      }
      #score1,#score2,#tiret{
      display: inline-block;
      }
      #avatarPlayer1{
      height: 200px;
      width: 150px;
      background: yellow;
      position: relative;
      top:100px;
      border-radius:90px;
      background-repeat:none;
      background-size:cover;
      }
      #avatarPlayer2{
      height: 200px;
      width: 150px;
      background: yellow;
      position: relative;
      top:100px;
      margin-left: 150px;
          border-radius:90px;
          background-repeat:none;
          background-size:cover;
      }
            
    script(src='/socket.io/socket.io.js', charset='utf-8')
    script(src='/demande/main.js', charset='utf-8')
  body
    main
      header
        #player1
          | JOUEUR :
          span#pseudo #{lavatar} #{pseudo} 
          #avatarPlayer1  

        #score
          | SCORE :
          #score1 0
          span#tiret -
          #score2 0
        #player2 ADVERSAIRE :
          span#adversaire #{adversaire}
          #avatarPlayer2
      section
        #player1Pierre
        #player1Feuille
        #player1Ciseaux
        #player2Pierre
        #player2Feuille
        #player2Ciseaux
        #result
